/* 浅色主题类 */
.theme-light {
  --bg-primary: #ffffff;
  --bg-secondary: rgba(255, 255, 255, 0.95);
  --bg-tertiary: rgba(0, 0, 0, 0.03);
  --bg-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-tertiary: #999999;
  --text-light: rgba(255, 255, 255, 0.9);
  --text-dark: rgba(0, 0, 0, 0.5);
  --border-primary: rgba(255, 255, 255, 0.2);
  --border-secondary: rgba(0, 0, 0, 0.05);
  --border-tertiary: rgba(0, 0, 0, 0.08);
  --shadow-primary: rgba(0, 0, 0, 0.05);
  --shadow-secondary: rgba(0, 0, 0, 0.08);
  --shadow-tertiary: rgba(102, 126, 234, 0.3);
  --accent-primary: #667eea;
  --accent-secondary: #764ba2;
  --accent-danger: #ff3b30;
  --message-user-bg: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --message-ai-bg: rgba(255, 255, 255, 0.95);
  --message-ai-text: #333333;
  --input-bg: rgba(0, 0, 0, 0.03);
  --input-border: rgba(0, 0, 0, 0.05);
  --input-text: #333333;
  --input-placeholder: #999999;
  --code-bg: #f6f8fa;
  --code-border: #e1e4e8;
  --code-text: #d73a49;
  --inline-code-bg: #f1f3f4;
  --table-header-bg: #f6f8fa;
  --table-border: #e1e4e8;
  --table-row-bg: #f8f9fa;
  --blockquote-bg: rgba(102, 126, 234, 0.05);
  --blockquote-border: #667eea;
  --blockquote-text: #586069;
}

/* 深色主题类 */
.theme-dark {
  --bg-primary: #1a1a1a;
  --bg-secondary: rgba(30, 30, 30, 0.95);
  --bg-tertiary: rgba(255, 255, 255, 0.05);
  --bg-gradient: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  --text-primary: #ffffff;
  --text-secondary: #cccccc;
  --text-tertiary: #999999;
  --text-light: rgba(255, 255, 255, 0.9);
  --text-dark: rgba(255, 255, 255, 0.5);
  --border-primary: rgba(255, 255, 255, 0.1);
  --border-secondary: rgba(255, 255, 255, 0.05);
  --border-tertiary: rgba(255, 255, 255, 0.08);
  --shadow-primary: rgba(0, 0, 0, 0.3);
  --shadow-secondary: rgba(0, 0, 0, 0.4);
  --shadow-tertiary: rgba(102, 126, 234, 0.4);
  --accent-primary: #667eea;
  --accent-secondary: #764ba2;
  --accent-danger: #ff6b6b;
  --message-user-bg: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --message-ai-bg: rgba(40, 40, 40, 0.95);
  --message-ai-text: #ffffff;
  --input-bg: rgba(255, 255, 255, 0.05);
  --input-border: rgba(255, 255, 255, 0.1);
  --input-text: #ffffff;
  --input-placeholder: #666666;
  --code-bg: #2d3748;
  --code-border: #4a5568;
  --code-text: #f56565;
  --inline-code-bg: #2d3748;
  --table-header-bg: #2d3748;
  --table-border: #4a5568;
  --table-row-bg: #1a202c;
  --blockquote-bg: rgba(102, 126, 234, 0.1);
  --blockquote-border: #667eea;
  --blockquote-text: #a0aec0;
}

/* 设置容器 */
.settings-container {
  height: 100vh;
  background: var(--bg-gradient);
  display: flex;
  flex-direction: column;
}

/* 安全区域适配 */
.safe-area-top {
  height: calc(env(safe-area-inset-top) + 60rpx);
  background: var(--bg-gradient);
  min-height: 80rpx;
}

.safe-area-bottom {
  height: env(safe-area-inset-bottom);
  background: var(--bg-gradient);
}

/* 滚动容器 */
.settings-scroll {
  flex: 1;
  height: calc(100vh - 120rpx - env(safe-area-inset-top) - env(safe-area-inset-bottom));
  -webkit-overflow-scrolling: touch; /* iOS滚动优化 */
}

/* 顶部导航栏 */
.header {
  background: var(--bg-secondary);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid var(--border-primary);
  padding: 20rpx 0;
  box-shadow: 0 2rpx 20rpx var(--shadow-primary);
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}

.header-left {
  flex: 1;
  display: flex;
  justify-content: flex-start;
}

.header-center {
  flex: 2;
  display: flex;
  justify-content: center;
}

.header-right {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: var(--bg-tertiary);
  border: 1px solid var(--border-tertiary);
  box-shadow: 0 2rpx 8rpx var(--shadow-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.back-btn:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx var(--shadow-secondary);
}

.back-icon {
  font-size: 32rpx;
  color: var(--text-primary);
  font-weight: 600;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
  letter-spacing: -0.5rpx;
}

/* 设置内容 */
.settings-content {
  padding: 30rpx;
  padding-bottom: 150rpx; /* 增加更多底部间距 */
}

/* 设置区域 */
.settings-section {
  background: var(--bg-secondary);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx var(--shadow-secondary);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid var(--border-secondary);
}

/* 设置项 */
.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1px solid var(--border-secondary);
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  flex: 1;
  margin-right: 20rpx;
}

.label-text {
  display: block;
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.label-desc {
  display: block;
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.4;
}

/* 输入框 */
.setting-input {
  flex: 1;
  max-width: 400rpx;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background: var(--input-bg);
  border-radius: 12rpx;
  border: 1px solid var(--input-border);
  overflow: hidden;
  transition: all 0.2s ease;
}

.input-wrapper:focus-within {
  border-color: var(--accent-primary);
  box-shadow: 0 0 0 2rpx rgba(102, 126, 234, 0.1);
}

.api-input {
  flex: 1;
  background: transparent;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  font-size: 26rpx;
  color: var(--input-text);
  border: none;
  outline: none;
}

.api-input::placeholder {
  color: var(--input-placeholder);
}

.eye-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: none;
  transition: all 0.2s ease;
  margin-right: 8rpx;
}

.eye-btn:active {
  background: var(--bg-tertiary);
}

.eye-icon {
  font-size: 28rpx;
  color: var(--text-tertiary);
  opacity: 0.8;
}

/* 选择器 */
.setting-select {
  flex: 1;
  max-width: 200rpx;
}

.picker-text {
  background: var(--bg-tertiary);
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  font-size: 26rpx;
  color: var(--text-primary);
  text-align: center;
  border: 1px solid var(--border-secondary);
}

/* 值显示 */
.setting-value {
  flex: 1;
  max-width: 300rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  justify-content: flex-end; /* 右对齐 */
}

.user-id-text {
  background: var(--bg-tertiary);
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  font-size: 26rpx;
  color: var(--accent-primary);
  font-weight: 600;
  border: 1px solid var(--border-secondary);
  flex: 1;
  text-align: center;
}

.copy-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--accent-primary);
  border-radius: 12rpx;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.copy-btn:active {
  transform: scale(0.95);
  background: var(--accent-secondary);
}

.copy-icon {
  font-size: 24rpx;
  color: white;
}

/* 开关 */
.setting-switch {
  flex-shrink: 0;
}

/* 按钮 */
.setting-button {
  flex-shrink: 0;
}

.clear-btn {
  background: rgba(255, 59, 48, 0.1);
  color: var(--accent-danger);
  border: 1px solid rgba(255, 59, 48, 0.2);
  border-radius: 12rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  min-width: 80rpx;
}

.clear-btn::after {
  border: none;
}

/* 保存区域 */
.save-section {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.save-btn {
  background: var(--message-user-bg);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 20rpx var(--shadow-tertiary);
  transition: all 0.3s ease;
}

.save-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx var(--shadow-tertiary);
}

.test-btn {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 20rpx rgba(240, 147, 251, 0.3);
  transition: all 0.3s ease;
}

.test-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(240, 147, 251, 0.4);
}

.network-btn {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 20rpx rgba(79, 172, 254, 0.3);
  transition: all 0.3s ease;
}

.network-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(79, 172, 254, 0.4);
}

/* 滑块样式 */
.setting-slider {
  flex: 1;
  max-width: 300rpx;
  padding: 0 20rpx;
  touch-action: pan-y; /* 允许垂直滚动 */
}

/* 重置按钮样式 */
.reset-btn {
  background: rgba(255, 193, 7, 0.1);
  color: #ffc107;
  border: 1px solid rgba(255, 193, 7, 0.2);
  border-radius: 12rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  min-width: 80rpx;
}

.reset-btn::after {
  border: none;
}

/* 版本号样式 */
.setting-value {
  flex-shrink: 0;
}

.version-text {
  background: rgba(102, 126, 234, 0.1);
  color: var(--accent-primary);
  border: 1px solid rgba(102, 126, 234, 0.2);
  border-radius: 12rpx;
  padding: 12rpx 16rpx; /* 与license-btn保持相同的高度padding */
  font-size: 24rpx;
  font-weight: 600;
  text-align: center; /* 改为居中对齐，看起来更整齐 */
  width: fit-content; /* 宽度适应内容 */
  min-width: 70rpx; /* 刚好适应"1.4.1"的最小宽度 */
}

/* 开源协议按钮样式 */
.license-btn {
  background: rgba(34, 197, 94, 0.1);
  color: #22c55e;
  border: 1px solid rgba(34, 197, 94, 0.2);
  border-radius: 12rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  min-width: 80rpx;
}

.license-btn::after {
  border: none;
}

/* 底部间距 */
.bottom-spacer {
  height: 100rpx;
} 