/**index.wxss**/

/* 浅色主题类 */
.theme-light {
  --bg-primary: #ffffff;
  --bg-secondary: rgba(255, 255, 255, 0.95);
  --bg-tertiary: rgba(0, 0, 0, 0.03);
  --bg-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-tertiary: #999999;
  --text-light: rgba(255, 255, 255, 0.9);
  --text-dark: rgba(0, 0, 0, 0.5);
  --border-primary: rgba(255, 255, 255, 0.2);
  --border-secondary: rgba(0, 0, 0, 0.05);
  --border-tertiary: rgba(0, 0, 0, 0.08);
  --shadow-primary: rgba(0, 0, 0, 0.05);
  --shadow-secondary: rgba(0, 0, 0, 0.08);
  --shadow-tertiary: rgba(102, 126, 234, 0.3);
  --accent-primary: #667eea;
  --accent-secondary: #764ba2;
  --accent-danger: #ff3b30;
  --message-user-bg: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --message-ai-bg: rgba(255, 255, 255, 0.95);
  --message-ai-text: #333333;
  --input-bg: rgba(0, 0, 0, 0.03);
  --input-border: rgba(0, 0, 0, 0.05);
  --input-text: #333333;
  --input-placeholder: #999999;
  --code-bg: #f6f8fa;
  --code-border: #e1e4e8;
  --code-text: #d73a49;
  --inline-code-bg: #f1f3f4;
  --table-header-bg: #f6f8fa;
  --table-border: #e1e4e8;
  --table-row-bg: #f8f9fa;
  --blockquote-bg: rgba(102, 126, 234, 0.05);
  --blockquote-border: #667eea;
  --blockquote-text: #586069;
}

/* 深色主题类 */
.theme-dark {
  --bg-primary: #1a1a1a;
  --bg-secondary: rgba(30, 30, 30, 0.95);
  --bg-tertiary: rgba(255, 255, 255, 0.05);
  --bg-gradient: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  --text-primary: #ffffff;
  --text-secondary: #cccccc;
  --text-tertiary: #999999;
  --text-light: rgba(255, 255, 255, 0.9);
  --text-dark: rgba(255, 255, 255, 0.5);
  --border-primary: rgba(255, 255, 255, 0.1);
  --border-secondary: rgba(255, 255, 255, 0.05);
  --border-tertiary: rgba(255, 255, 255, 0.08);
  --shadow-primary: rgba(0, 0, 0, 0.3);
  --shadow-secondary: rgba(0, 0, 0, 0.4);
  --shadow-tertiary: rgba(102, 126, 234, 0.4);
  --accent-primary: #667eea;
  --accent-secondary: #764ba2;
  --accent-danger: #ff6b6b;
  --message-user-bg: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --message-ai-bg: rgba(40, 40, 40, 0.95);
  --message-ai-text: #ffffff;
  --input-bg: rgba(255, 255, 255, 0.05);
  --input-border: rgba(255, 255, 255, 0.1);
  --input-text: #ffffff;
  --input-placeholder: #666666;
  --code-bg: #2d3748;
  --code-border: #4a5568;
  --code-text: #f56565;
  --inline-code-bg: #2d3748;
  --table-header-bg: #2d3748;
  --table-border: #4a5568;
  --table-row-bg: #1a202c;
  --blockquote-bg: rgba(102, 126, 234, 0.1);
  --blockquote-border: #667eea;
  --blockquote-text: #a0aec0;
}

page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-primary);
  color: var(--text-primary);
}

/* 聊天容器 */
.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--bg-gradient);
  position: relative;
}

/* 安全区域适配 */
.safe-area-top {
  height: calc(env(safe-area-inset-top) + 60rpx);
  background: var(--bg-gradient);
  min-height: 80rpx;
}

.safe-area-bottom {
  height: env(safe-area-inset-bottom);
  background: var(--bg-gradient);
}

/* 顶部导航栏 */
.header {
  background: var(--bg-secondary);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid var(--border-primary);
  padding: 20rpx 0;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 20rpx var(--shadow-primary);
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}

.title-section {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 8rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
  letter-spacing: -0.5rpx;
}

.service-indicator {
  font-size: 20rpx;
  color: var(--accent-primary);
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  border: 1px solid rgba(102, 126, 234, 0.2);
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.rect-btn {
  padding: 12rpx 20rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  min-width: 80rpx;
}

.rect-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--bg-tertiary);
  border-radius: 16rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.rect-btn:active::before {
  opacity: 1;
}

.settings-btn {
  background: var(--bg-tertiary);
  border: 1px solid var(--border-tertiary);
  box-shadow: 0 2rpx 8rpx var(--shadow-primary);
}

.settings-btn:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx var(--shadow-secondary);
}

.clear-btn {
  background: linear-gradient(135deg, #fff5f5 0%, #fed7d7 100%);
  border: 1px solid rgba(255, 59, 48, 0.2);
  box-shadow: 0 2rpx 8rpx rgba(255, 59, 48, 0.15);
}

.clear-btn:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(255, 59, 48, 0.2);
}

.btn-text {
  font-size: 24rpx;
  font-weight: 600;
  z-index: 1;
  position: relative;
}

.settings-btn .btn-text {
  color: var(--text-primary);
}

.clear-btn .btn-text {
  color: var(--accent-danger);
}

/* 移除旧的样式 */
.service-badge {
  display: none;
}

.service-text {
  display: none;
}

.action-btn {
  display: none;
}

.btn-icon {
  display: none;
}

/* 消息列表区域 */
.message-list {
  flex: 1;
  padding: 20rpx 0;
  margin-bottom: 0;
  overflow-y: auto;
}

.message-list-content {
  padding: 0 30rpx;
}

/* 欢迎消息 */
.welcome-message {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  text-align: center;
}

.welcome-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.welcome-text {
  font-size: 32rpx;
  color: var(--text-light);
  line-height: 1.5;
  max-width: 500rpx;
}

/* 消息项 */
.message-item {
  display: flex;
  margin-bottom: 40rpx;
  animation: fadeIn 0.3s ease-in-out;
}

.user-message {
  flex-direction: row-reverse;
}

.ai-message {
  flex-direction: row;
}

.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 20rpx;
  flex-shrink: 0;
}

.user-message .message-avatar {
  background: var(--message-user-bg);
}

.ai-message .message-avatar {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.avatar-text {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  text-align: center;
  line-height: 1;
}

/* 消息头像图片样式 */
.message-avatar .avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.message-avatar .avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.message-content {
  flex: 1;
  max-width: 70%;
}

.message-bubble {
  background: var(--message-ai-bg);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 24rpx 28rpx;
  box-shadow: 0 4rpx 20rpx var(--shadow-secondary);
  position: relative;
  border: 1px solid var(--border-primary);
}

.user-message .message-bubble {
  background: var(--message-user-bg);
  color: white;
  box-shadow: 0 4rpx 20rpx var(--shadow-tertiary);
  border: 1px solid var(--border-primary);
}

.ai-message .message-bubble {
  background: var(--message-ai-bg);
  color: var(--message-ai-text);
  box-shadow: 0 4rpx 20rpx var(--shadow-secondary);
  border: 1px solid var(--border-secondary);
  max-width: 100%;
  overflow: hidden;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.6;
  word-wrap: break-word;
  font-weight: 400;
}

.user-message .message-text {
  color: white;
}

.ai-message .message-text {
  color: var(--message-ai-text);
  width: 100%;
}

/* 流式输出指示器 */
.streaming-indicator {
  display: inline-flex;
  align-items: center;
  margin-left: 8rpx;
  gap: 4rpx;
}

.streaming-dot {
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background: var(--accent-primary);
  animation: streamingPulse 1.4s infinite ease-in-out;
}

.streaming-dot:nth-child(1) {
  animation-delay: 0s;
}

.streaming-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.streaming-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes streamingPulse {
  0%, 100% {
    opacity: 0.3;
    transform: scale(0.8);
  }
  50% {
    opacity: 1;
    transform: scale(1.2);
  }
}

/* Markdown 样式美化 */
.message-text {
  font-size: 28rpx;
  line-height: 1.6;
  word-wrap: break-word;
  font-weight: 400;
}

/* wemark组件在AI消息中的样式 */
.ai-message .message-bubble .wemark_wrapper {
  margin: 0;
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--message-ai-text);
  width: 100%;
}

.ai-message .message-bubble .wemark_wrapper .wemark_block_p {
  margin: 8rpx 0;
  word-wrap: break-word;
}

.ai-message .message-bubble .wemark_wrapper .wemark_block_h1 {
  font-size: 36rpx;
  font-weight: 700;
  margin: 24rpx 0 16rpx 0;
  color: var(--text-primary);
  border-bottom: 2px solid var(--border-secondary);
  padding-bottom: 8rpx;
}

.ai-message .message-bubble .wemark_wrapper .wemark_block_h2 {
  font-size: 32rpx;
  font-weight: 600;
  margin: 20rpx 0 12rpx 0;
  color: var(--text-primary);
}

.ai-message .message-bubble .wemark_wrapper .wemark_block_h3 {
  font-size: 28rpx;
  font-weight: 600;
  margin: 16rpx 0 8rpx 0;
  color: var(--text-primary);
}

.ai-message .message-bubble .wemark_wrapper .wemark_block_code {
  background: var(--code-bg);
  border: 1px solid var(--code-border);
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 16rpx 0;
  font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
  font-size: 24rpx;
  line-height: 1.5;
  overflow-x: auto;
  white-space: pre-wrap;
  word-wrap: break-word;
}

.ai-message .message-bubble .wemark_wrapper .wemark_inline_code {
  background: var(--inline-code-bg);
  color: var(--code-text);
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
  font-size: 24rpx;
}

.ai-message .message-bubble .wemark_wrapper .wemark_block_blockquote_p {
  border-left: 4px solid var(--blockquote-border);
  background: var(--blockquote-bg);
  padding: 16rpx 20rpx;
  margin: 16rpx 0;
  border-radius: 0 8rpx 8rpx 0;
  font-style: italic;
  color: var(--blockquote-text);
}

.ai-message .message-bubble .wemark_wrapper .wemark_inline_link {
  color: var(--accent-primary);
  text-decoration: none;
  border-bottom: 1px solid transparent;
  transition: border-bottom-color 0.2s ease;
}

.ai-message .message-bubble .wemark_wrapper .wemark_inline_strong {
  font-weight: 600;
  color: var(--text-primary);
}

.ai-message .message-bubble .wemark_wrapper .wemark_inline_em {
  font-style: italic;
  color: var(--text-secondary);
}

.ai-message .message-bubble .wemark_wrapper .wemark_block_table {
  border-collapse: collapse;
  width: 100%;
  margin: 16rpx 0;
  font-size: 24rpx;
}

.ai-message .message-bubble .wemark_wrapper .wemark_inline_table_th,
.ai-message .message-bubble .wemark_wrapper .wemark_inline_table_td {
  border: 1px solid var(--table-border);
  padding: 12rpx 16rpx;
  text-align: left;
  word-wrap: break-word;
}

.ai-message .message-bubble .wemark_wrapper .wemark_inline_table_th {
  background: var(--table-header-bg);
  font-weight: 600;
  color: var(--text-primary);
}

.ai-message .message-bubble .wemark_wrapper .wemark_block_table_tr:nth-child(even) {
  background: var(--table-row-bg);
}

/* 列表样式 */
.ai-message .message-bubble .wemark_wrapper .wemark_block_ul_li_p,
.ai-message .message-bubble .wemark_wrapper .wemark_block_ol_li_p {
  margin: 8rpx 0;
  line-height: 1.6;
}

/* 分割线样式 */
.ai-message .message-bubble .wemark_wrapper .wemark_block_hr {
  border: none;
  border-top: 1px solid var(--border-secondary);
  margin: 24rpx 0;
}

/* 移除旧的wemark样式，避免冲突 */
.message-text .wemark-code,
.message-text .wemark-inline-code,
.message-text .wemark-h1,
.message-text .wemark-h2,
.message-text .wemark-h3,
.message-text .wemark-ul,
.message-text .wemark-ol,
.message-text .wemark-li,
.message-text .wemark-blockquote,
.message-text .wemark-link,
.message-text .wemark-strong,
.message-text .wemark-em,
.message-text .wemark-hr,
.message-text .wemark-table,
.message-text .wemark-table th,
.message-text .wemark-table td {
  display: none;
}

.message-time {
  font-size: 22rpx;
  color: var(--text-dark);
  margin-top: 12rpx;
  text-align: right;
}

.ai-message .message-time {
  color: var(--text-dark);
  text-align: left;
}

/* 加载状态 */
.loading-message {
  display: flex;
  margin-bottom: 40rpx;
}

.loading-bubble {
  background: var(--message-ai-bg);
  min-width: 120rpx;
}

.loading-dots {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: var(--text-tertiary);
  animation: loadingDot 1.4s infinite ease-in-out;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }

/* 底部输入区域 */
.input-container {
  background: var(--bg-secondary);
  backdrop-filter: blur(20px);
  border-top: 1px solid var(--border-primary);
  padding: 12rpx 30rpx;
  padding-bottom: calc(12rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 20rpx var(--shadow-primary);
  position: relative;
  z-index: 10;
  min-height: 100rpx;
  display: block !important;
  visibility: visible !important;
}

.input-wrapper {
  display: flex;
  align-items: center;
  gap: 20rpx;
  background: var(--input-bg);
  border-radius: 28rpx;
  padding: 8rpx 20rpx;
  border: 1px solid var(--input-border);
  box-shadow: inset 0 2rpx 8rpx var(--shadow-primary);
}

.message-input {
  flex: 1;
  font-size: 28rpx;
  line-height: 1.5;
  max-height: 120rpx;
  min-height: 32rpx;
  background: transparent;
  border: none;
  outline: none;
  resize: none;
  color: var(--input-text);
  padding: 6rpx 0;
  margin: 0;
}

.message-input::placeholder {
  color: var(--input-placeholder);
  line-height: 1.5;
  vertical-align: middle;
}

.send-btn {
  background: var(--message-user-bg);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  flex-shrink: 0;
  box-shadow: 0 4rpx 16rpx var(--shadow-tertiary);
  position: relative;
  overflow: hidden;
}

.send-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--bg-tertiary);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.send-btn:active::before {
  opacity: 1;
}

.send-btn.active {
  transform: scale(1.02);
  box-shadow: 0 6rpx 20rpx var(--shadow-tertiary);
}

.send-btn:not(.active) {
  background: var(--bg-tertiary);
  color: var(--text-tertiary);
  box-shadow: 0 2rpx 8rpx var(--shadow-primary);
}

.send-icon {
  position: relative;
  z-index: 1;
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes loadingDot {
  0%, 80%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 用户头像样式 */
.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  background: var(--message-user-bg);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx var(--shadow-primary);
  border: 2rpx solid var(--border-primary);
}

.user-avatar:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx var(--shadow-secondary);
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--message-user-bg);
}

.avatar-placeholder .avatar-text {
  font-size: 28rpx;
  color: white;
}

/* 移动设备优化 */
@media screen and (max-width: 750rpx) {
  .ai-message .message-bubble .wemark_wrapper {
    font-size: 26rpx;
  }
  
  .ai-message .message-bubble .wemark_wrapper .wemark_block_h1 {
    font-size: 32rpx;
  }
  
  .ai-message .message-bubble .wemark_wrapper .wemark_block_h2 {
    font-size: 28rpx;
  }
  
  .ai-message .message-bubble .wemark_wrapper .wemark_block_h3 {
    font-size: 26rpx;
  }
  
  .ai-message .message-bubble .wemark_wrapper .wemark_block_code {
    font-size: 22rpx;
    padding: 16rpx;
  }
  
  .ai-message .message-bubble .wemark_wrapper .wemark_inline_code {
    font-size: 22rpx;
  }
  
  .ai-message .message-bubble .wemark_wrapper .wemark_block_table {
    font-size: 22rpx;
  }
  
  .ai-message .message-bubble .wemark_wrapper .wemark_inline_table_th,
  .ai-message .message-bubble .wemark_wrapper .wemark_inline_table_td {
    padding: 8rpx 12rpx;
  }
}

/* 确保代码块在移动设备上可以横向滚动 */
.ai-message .message-bubble .wemark_wrapper .wemark_block_code {
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

/* 优化表格在移动设备上的显示 */
.ai-message .message-bubble .wemark_wrapper .wemark_block_table {
  min-width: 100%;
  table-layout: fixed;
}

/* 确保链接在小屏幕上也能正常点击 */
.ai-message .message-bubble .wemark_wrapper .wemark_inline_link {
  min-height: 44rpx;
  display: inline-flex;
  align-items: center;
}
